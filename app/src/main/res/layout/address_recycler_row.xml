<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">

    <LinearLayout
        android:id="@+id/layout22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/dud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinAdapterCity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6" />

        <Spinner
            android:id="@+id/spinAdapterDistrict"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4" />
    </LinearLayout>

    <EditText
        android:id="@+id/txtAdapterAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout22"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="@string/declare_visitaddress"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/layout23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAdapterAddress">

        <EditText
            android:id="@+id/txtAdapterDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="7"
            android:ems="10"
            android:hint="@string/declare_dateofvisit"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btnDeleteItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:backgroundTint="#F44336"
            android:src="@drawable/ic_baseline_delete_forever_24" />
    </LinearLayout>
</RelativeLayout>